<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.user.userserver.mapper.UserMapper">

    <select id="getUserById">
        select id,
               username,
               password,
               phone,
               permissions,
               status,
               is_del,
               create_time,
               update_time
        from user
        where id = ${id}
    </select>

</mapper>
